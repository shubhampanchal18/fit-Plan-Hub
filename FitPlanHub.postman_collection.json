              "raw": "{\n  \"title\": \"Fat Loss Beginner Plan\",\n  \"description\": \"A comprehensive 30-day plan for beginners looking to lose fat and build muscle.\",\n  \"price\": 49.99,\n  \"duration\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/plans",
              "host": ["{{baseUrl}}"],
              "path": ["api", "plans"]
            }
          }
        },
        {
          "name": "Update Plan (Trainer)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Plan Title\",\n  \"price\": 59.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/plans/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "plans", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Delete Plan (Trainer)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
